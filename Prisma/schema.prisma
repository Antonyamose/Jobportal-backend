generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id       Int     @id @default(autoincrement()) // PK
  user_id  String  @unique @default(cuid())   
  name     String
  email    String  @unique
  phone    String
  password String

  tokens   Token[]
}

model Token {
  id           Int   @id @default(autoincrement())
  user_id      Int
  refreshtoken String

  Job Job @relation(fields: [user_id], references: [id])
}

model Joblist {
  id         Int      @id @default(autoincrement())
  title      String
  company    String
  location   String
  experience Int
  skills     String[]
  url        String
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  photoUrl String
}
